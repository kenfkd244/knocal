%div.header.clearfix
  %div.wrapper
    %div.header-left
      = link_to 'Knocal', root_path, :class => "header-title"
    %div.header-right
      - if user_signed_in?
        %a.header-button{ :href => new_question_path } 質問する
        %a.header-button{ :href => user_path(current_user) } マイページ
        %a.header-button{ :href => destroy_user_session_path, :"data-method" => :delete } ログアウト
      - else
        %a.header-button{ :href => new_user_session_path } ログイン
        %a.header-button{ :href => new_user_registration_path } 新規登録